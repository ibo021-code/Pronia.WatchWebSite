

@model List<GetSlideVM>
@{
    int count = 0;
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

               
                <h4 class="card-title">Slide</h4>
               
                <div class="table-responsive">
                    <a  asp-action="create" class="btn btn-success"> Create </a>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Order 
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Settings
                                </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetSlideVM slideVM in Model)
                            {
                                count++;    
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/website-images/@slideVM.Image">
                                    </td>
                                    <td>
                                        @slideVM.Title
                                    </td>
                                    <td>
                                        @slideVM.Order
                                    </td>
                                    <td>
                                        @slideVM.CreatedAt
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@slideVM.Id" class="btn btn-warning"> <i class="mdi mdi-pencil" ></i> </a>
                                        <a asp-action="delete" asp-route-id="@slideVM.Id" class="btn btn-danger"> <i class="mdi mdi-delete"></i> </a>
                                        <a asp-action="detail" asp-route-id="@slideVM.Id" class="btn btn-primary"><i class="mdi mdi-account-card-details"></i></a>
                                    </td>

                                </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
